<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
  
      <style name="My" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  
    <style name="AppTheme.GeneralForm">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">#424250</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="AppTheme.GeneralButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#ff4180</item>
    </style>
    <style name="AppTheme.GeneralInput">
        <item name="android:textColor">#6e6e86</item>
        <item name="android:backgroundTint">#545465</item>
    </style>
    <style name="AppTheme.GeneralLabel">
        <item name="android:textColor">#ff4180</item>
    </style>
    <style name="AppTheme.GeneralTitle">
        <item name="android:textColor">#545465</item>
        <item name="android:textSize">16dp</item>
    </style>    
    <style name="My.GeneralForm">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#38300A</item>
    </style>    
    <style name="My.GeneralForm">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#E9C92D</item>
    </style>
    <style name="My.GeneralButton">
        <item name="android:background">@drawable/my_rounded_button</item>
        <item name="android:textColor">#FFD500</item>
    </style>
    <style name="My.GeneralInput">
        <item name="android:textColor">#38300A</item>
        <item name="android:backgroundTint">#38300A</item>
    </style>
    <style name="My.GeneralLabel">
        <item name="android:textColor">#E9C92D</item>
    </style>
    <style name="My.GeneralTitle">
        <item name="android:textColor">#FFD500</item>
        <item name="android:textSize">16dp</item>
    </style>     

</resources>
